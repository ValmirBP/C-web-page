@model Login
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Page</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css">
</head>
<body>

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <form asp-action="Login" method="post">
                            <div class="form-group">
                                <label asp-for="username">Username</label>
                                <span asp-validation-for="username" class="text-danger"></span>
                                <input asp-for="username" class="form-control" id="username" placeholder="Enter your username" />
                            </div>
                            <div class="form-group">
                                <label asp-for="password">Password</label>
                                <span asp-validation-for="password" class="text-danger"></span>
                                <input asp-for="password" type="password" class="form-control" id="password" placeholder="Enter your password" />
                            </div>
                            <br />
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-sign-in-alt"></i> Login
                            </button>

                            <div>
                                <br />
                                <p>Don´t have an account? <a href="/Home/Signup">Sign up</a> </p>
                            </div>

                            <div class="card-body">
                                @if (TempData.ContainsKey("ErrorMessage"))
                                {
                                    <div class="alert alert-danger" role="alert">
                                        @TempData["ErrorMessage"]
                                    </div>
                                }
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>