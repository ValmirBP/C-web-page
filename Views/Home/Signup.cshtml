@model Signup

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta Name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

    <link href="https://fonts.googleapis.com/css?family=Poppins:400,700&display=swap" rel="stylesheet">

    <!-- Custom styles for this template -->
     @* <link rel="stylesheet" href="~/css/Signupstyle.css" />  *@
    <!-- responsive style -->
    @* <link rel="stylesheet" href="~/css/responsive.css" /> *@

    <title>Sign Up</title>
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        Sign Up
                    </div>
                    <div class="card-body">
                        <form asp-action="Signup" method="post">
                            <div class="form-row">
                                <div class="form-group">
                                    <label asp-for="Username" class="form-label">Username:</label>
                                    <span asp-validation-for="Username" class="text-danger"></span>
                                    <input asp-for="Username" class="form-control" >
                                </div>

                                <br />

                                <div class="form-group">
                                    <label asp-for="Email" class="form-label">Email:</label>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                    <input asp-for="Email" class="form-control" >
                                </div>

                                <br />

                            </div>
                            <div class="form-group">
                                <label asp-for="Name" class="form-label">Name:</label>
                                <span asp-validation-for="Name" class="text-danger"></span>
                                <input asp-for="Name" class="form-control" >
                            </div>
                            
                            <br />

                            <div class="form-group">
                                <label asp-for="Country" class="form-label">Country:</label>
                                <span asp-validation-for="Country" class="text-danger"></span>
                                <select asp-for="Country" class="form-select">
                                    <option value="">Select Country</option>

                                    @foreach (var countryItem in Model.Country)
                                    {
                                        <option value="@countryItem">@countryItem</option>
                                    }
                                </select>
                            </div>

                            <br />

                            <div class="form-group">
                                <label asp-for="Password" class="form-label">Password:</label>
                                <span asp-validation-for="Password" class="text-danger"></span>
                                <input asp-for="Password" class="form-control" />

                                <div class="text-muted">
                                    Password must meet the following requirements:
                                    <ul>
                                        <li>At least one lowercase letter.</li>
                                        <li>At least one uppercase letter.</li>
                                        <li>At least one digit (0-9).</li>
                                        <li>Minimum length of 8 characters.</li>
                                    </ul>
                                </div>
                            </div>
                            
                            <br />

                            <div class="form-group">
                                <label asp-for="ConfirmPassword">Confirm Password:</label>
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                <input asp-for="ConfirmPassword" class="form-control" />
                            </div>
                            
                            <br />

                            <div class="card-footer">
                                <br />
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-user-plus"></i> Sign Up
                                </button>
                                <a asp-action="Signup" class="btn btn-outline-secondary">
                                    <i class="fas fa-eraser"></i> Clear
                                </a>
                                <div>
                                    <br />
                                    <p>Already have an account? <a href="/Home/Login">Log in</a> </p>
                                </div>
                            </div>
                            
                            <br />

                            <div class="card-body">
                                @if (TempData.ContainsKey("SuccessMessage"))
                                {
                                    <div class="alert alert-success">
                                        @TempData["SuccessMessage"]
                                    </div>
                                }
                            </div>
                            
                            <br />

                        </form>
                        @section Scripts {
                            <partial name="_ValidationScriptsPartial" />
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Bootstrap JS (optional, if you need JavaScript features) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

